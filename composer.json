{
  "name": "simondevelop/slim-doctrine",
  "description": "Skeleton slim 3 with doctrine orm and other lib",
  "keywords": [
    "skeleton",
    "slim",
    "twig",
    "doctrine",
    "validation",
    "csrf",
    "token",
    "dotenv",
    "tracy",
    "session"
  ],
  "homepage": "https://github.com/SimonDevelop/slim-doctrine",
  "license": "MIT",
  "authors": [
    {
      "name": "SimonDevelop",
      "email": "contact@simon-micheneau.fr"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/src/",
      "App\\Extensions\\": "app/extensions/",
      "Commands\\": "app/commands/"
    },
    "files": [
      "config/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.1",
    "slim/slim": "^3.0",
    "slim/twig-view": "^2.2",
    "respect/validation": "^1.1",
    "slim/csrf": "^0.8.1",
    "symfony/console": "^3.3",
    "digitalnature/php-ref": "^1.2",
    "vlucas/phpdotenv": "^2.4",
    "monolog/monolog": "^1.23",
    "doctrine/orm": "^2.5",
    "doctrine/data-fixtures": "^1.2",
    "runcmf/runtracy": "^0.2.10",
    "doctrine/dbal": "^2.6",
    "adbario/slim-secure-session-middleware": "^1.3",
    "illuminate/translation": "^5.5",
    "php-school/cli-menu": "^2.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.2",
    "phpunit/phpunit": "~7.1.0"
  },
  "config": {
    "process-timeout" : 0
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "start": "php -S localhost:8080 -t public public/index.php",
    "phpcs": "phpcs -s",
    "phpunit": "phpunit --colors",
    "test": [
      "@phpunit",
      "@phpcs"
    ]
  }
}
